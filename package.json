{
  "name": "@fethcat/version",
  "version": "0.0.8",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "package.json"
  ],
  "license": "ISC",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier -w \"{src,tests}/**/*.ts\"",
    "lint": "eslint \"{src,tests}/**/*.ts\"",
    "test": "vitest run --coverage",
    "version:patch": "pnpm build && node ./dist/index.js patch",
    "version:minor": "pnpm build && node ./dist/index.js minor",
    "version:major": "pnpm build && node ./dist/index.js major"
  },
  "bin": {
    "version": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:fethca/version.git"
  },
  "devDependencies": {
    "@fethcat/eslint-plugin": "^0.0.3",
    "@fethcat/prettier-config": "^1.0.5",
    "@fethcat/tests": "^0.0.15",
    "@types/node": "^20.11.30",
    "prettier": "^3.2.5",
    "typescript": "^5.4.3"
  },
  "dependencies": {
    "@fethcat/shared": "^0.0.3",
    "@vitest/coverage-v8": "^1.4.0",
    "async-exec": "^1.1.0",
    "eslint": "^8.57.0",
    "vitest": "^1.4.0"
  },
  "eslintConfig": {
    "extends": [
      "plugin:@fethcat/back"
    ]
  },
  "prettier": "@fethcat/prettier-config"
}